{
  "compilerOptions": {
    "baseUrl": "./src",
    "rootDir": "./src",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "lib": ["ES2019", "DOM", "ScriptHost"],
    "strict": true,
    "jsx": "react",
    "noImplicitAny": true,
    "target": "esnext",
    "allowJs": true,
    "outDir": "./dist"
  },
  "include": ["src/**/*"],
  "exclude": ["src/models/**/*"]
}
